#!/usr/bin/node

const esbuild = require("esbuild");

esbuild.buildSync({
  entryPoints: ["src/index.ts"],
  bundle: true,
  outdir: "dist",
  format: "esm",
  outExtension: { ".js": ".esm.js" },
});

esbuild.buildSync({
  entryPoints: ["src/index.ts"],
  bundle: true,
  outdir: "dist",
  format: "cjs",
  outExtension: { ".js": ".cjs.js" },
});
